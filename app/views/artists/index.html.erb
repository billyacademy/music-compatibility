<link href='http://fonts.googleapis.com/css?family=Chewy' rel='stylesheet' type='text/css'>

<div id="rate_artist"><h1>Rate an Artist!</h1></div><br>

<% if @artist == nil %>
  <h3>You have rated every artist!</h3>
<% else %>
  <div id="artist_name"><h2><%= @artist.name %></h2></div>
  <div id="tastes">
  <%= button_to "Love", { method: :post, controller: "tastes", action: "create", artist_id: @artist.id, user_id: current_user, opinion: "Love" }, class: "button"%>
  <%= button_to "Like", { method: :post, controller: "tastes", action: "create", artist_id: @artist.id, user_id: current_user, opinion: "Like" }, class: "button" %>
  <%= button_to "Don't Know", { method: :post, controller: "tastes", action: "create", artist_id: @artist.id, user_id: current_user, opinion: "Don't Know" }, class: "button" %>
  <%= button_to "Dislike", { method: :post, controller: "tastes", action: "create", artist_id: @artist.id, user_id: current_user, opinion: "Dislike" }, class: "button" %>
  </div>
<% end %>
